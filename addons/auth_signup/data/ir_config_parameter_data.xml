<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- activate B2C portal by default -->
        <function model="ir.config_parameter" name="set_param" eval="('auth_signup.invitation_scope', 'b2b')"/>
        <!-- activate Reset password by default -->
        <function model="ir.config_parameter" name="set_param" eval="('auth_signup.reset_password', 'True')"/>
        <!-- activate OTP Secret Key by default -->
        <function model="ir.config_parameter" name="set_param" eval="('auth_signup.sms_otp_secret_key', 'base32secret3232')"/>
        <!-- activate OTP Interval Seconds -->
        <function model="ir.config_parameter" name="set_param" eval="('auth_signup.sms_otp_interval_sec', 300)"/>
    </data>
</odoo>
